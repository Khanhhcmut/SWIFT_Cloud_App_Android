<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:background="@drawable/item_card_bg"
    android:layout_marginBottom="8dp">

    <!-- STT -->
    <TextView
        android:id="@+id/txtIndex"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="monospace"/>

    <!-- Check icon -->
    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/txtIndex"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:src="@drawable/checkbox_icn"
        android:visibility="gone" />

    <!-- Folder name -->
    <TextView
        android:id="@+id/txtFolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/checkIcon"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Delete icon -->
    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/choice_icn"
        android:visibility="gone" />

</RelativeLayout>
