<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BK Cloud App User Manual"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Đăng nhập vào app"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Nhập Username, Password và Project name để đăng nhập.\n- Nếu thiếu thông tin sẽ báo lỗi."
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Giao diện chính\n\n- Gồm 2 phần chính: menu bên trái và nội dung bên phải."
            android:textSize="16sp"
            android:paddingTop="10dp" />


        <!-- EXIT BUTTON -->
        <Button
            android:id="@+id/btnExitManual"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/loginbtn"
            app:backgroundTint="@null"
            android:text="Exit"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
